<form>
  <div class="form-group">
    <label for="user">User Name</label>
    {{input id="user" class="form-control" value=user}}
  </div>
  <div class="form-group">
    <label for="text">Review</label>
    {{textarea id="text" class="form-control" value=text}}
  </div>
  <div class="form-group">
    <label for="rating">Rating</label>
    <!-- {{select id="rating" class="form-control" value=rating}} -->
    {{view Ember.Select
      content=selectContentType
      optionValuePath="content.value"
      optionLabelPath="content.label"
      selectionBinding=selectedContentType}}




  </div>
  <button class="btn btn-sm btn-primary" id="cart-button"{{action 'submit'}}>Submit review</button>
</form>
